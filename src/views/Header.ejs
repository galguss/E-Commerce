<header>
    <div class="logo">
        <img src="/logo.png" alt="">
        <div class="buttons">
            <% if (isLogged) { %>
                <button class="a" onclick="logout()">logout</button>
            <% } 
             %>
        </div>
    </div>
</header>

<script>
    function logout() {
        localStorage.removeItem('token');
        window.location.href = '/user/logout';
    }
</script>


